{
	"apiVersion": 2,
	"name": "wp/btn-boot",
	"title": "WP Button",
	"category": "WP-content",
	"description": "Add a customizable button with optional link, text, and styling.\n",
	"textdomain": "default",
	"attributes": {
		"url": {
			"type": "string",
			"source": "attribute",
			"selector": "a",
			"attribute": "href"
		},
		"buttonText" : {
			"type": "string",
			"source": "text",
			"selector": "a"
		},
		"borderColor": {
			"type": "string",
			"default": ""
		},
		"txtColor": {
			"type": "string",
			"default": ""
		},
		"bgColor": {
			"type": "string",
			"default": ""
		},
		"bRadius": {
			"type": "string",
			"default": "0"
		},
		"bSize": {
			"type": "string",
			"default": "0"
		},
		"bootAlign": {
			"type": "string",
			"default": ""
		},
		"bootClass": {
			"type": "string",
			"default": ""
		},
		"bootOutlineClass": {
			"type": "string",
			"default": ""
		},
		"bootSizesClass": {
			"type": "string",
			"default": ""
		},
		"bootPopClass": {
			"type": "string",
			"default": ""
		},
		"linkTarget": {
			"type": "string",
			"source": "attribute",
			"selector": "a",
			"attribute": "target"
		},
		"rel": {
			"type": "string",
			"source": "attribute",
			"selector": "a",
			"attribute": "rel"
		},
		"placeholder": {
			"type": "string"
		}
	},
	"supports": {
		"anchor": true,
		"align": true,
		"html": true
	},
	"example": {
		"attributes": {
			"buttonText": "Click Here",
			"url": "#",
			"borderColor": "#000",
			"txtColor": "#ccc",
			"bgColor": "#000",
			"bRadius": "0",
			"bSize": "1",
			"bootClass": "btn",
			"bootOutlineClass": "",
			"bootSizesClass": "btn-md",
			"bootPopClass": "",
			"bootAlign": "center",
			"linkTarget": "_blank",
			"rel": "noopener noreferrer",
			"placeholder": "Button Text"
		}
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css"
}